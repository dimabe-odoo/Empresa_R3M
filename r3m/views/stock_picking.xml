<odoo>
    <data>
        <record id="stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">Export Page</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='extra']" position="after">
                    <page string="Cartocor" id="cartocor_data"
                          attrs="{'invisible':[('picking_type_code', '=', 'internal')]}"
                    >
                        <group name="cartocor_data"
                               position="inside"
                        >
                            <group string="Pedido"
                                   style="width:100%;"
                            >
                                <group>
                                    <field name="r3m_po"/>
                                    <field name="r3m_order"/>
                                    <field name="r3m_destination" options="{'limit': 10, 'create': true, 'create_edit': true}" />
                                    <field name="r3m_container"/>
                                    <field name="r3m_booking"/>
                                    <field name="r3m_bl"/>
                                    <field name="r3m_vessel"/>
                                    <field name="r3m_account"/>
                                    <field name="r3m_plant" />
                                    <field name="r3m_eta" />
                                </group>
                                <group>
                                    <field name="remarks"/>
                                </group>
                            </group>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//page[@name='extra']" position="after">
                    <page string="Transporte" id="r3m_transport"
                          attrs="{'invisible':[('picking_type_code', '=', 'internal')]}"
                    >
                                <group string="Datos camiÃ³n">
                                    <field name="r3m_truck"/>
                                    <field name="r3m_driver"/>
                                    <field name="r3m_date_dispatched"/>
                                    <field name="r3m_date_on_port"/>
                                </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="stock_view_production_lot_form_inherit" model="ir.ui.view">
            <field name="name"></field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_qty']"
                       position="after">
                    <field name="kilos"  />
                    <field name="linear_m"  />
                    <field name="area_sqm"  />
                    <field name="container_number" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
